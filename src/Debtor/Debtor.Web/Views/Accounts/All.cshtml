@model List<Account>

@{
    ViewData["Title"] = "Account List";
}

<a class="btn btn-primary" asp-controller="Accounts" asp-action="Create">Create</a>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Full Name</th>
            <th scope="col">Account Type</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Created At</th>
            <th scope="col">Transaction List</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Account account in Model)
        {
            <tr>
                <td scope="row">@account.Id</td>
                <td>@account.FullName</td>
                <td>@account.AccountType</td>
                <td>@account.Email</td>
                <td>@account.Phone</td>
                <td>@account.CreatedAt</td>
                <td><a class="btn btn-primary" asp-controller="Accounts" asp-action="Detail" asp-route-id="@account.Id"> Detail</a></td>
                <td>
                    <a class="btn btn-warning" asp-controller="Accounts" asp-action="Update" asp-route-id="@account.Id">Update</a>
                </td>
                <td>
                    <form method="post" asp-controller="Accounts" asp-action="Delete" asp-route-id="@account.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>