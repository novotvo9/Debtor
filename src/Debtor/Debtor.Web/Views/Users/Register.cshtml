@using Debtor.Web.Models.Users
@model UsersRegisterViewModel;

@{
    ViewData["Title"] = "User Register";
}

<h1>REGISTER</h1>

<form method="post">
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input asp-for="Email" class="form-control" type="email" id="email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" id="password">
    </div>
    <div class="mb-3">
        <label for="passwordAgain" class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" id="passwordAgain">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
