@model List<AccountTransaction>

@{
    ViewData["Title"] = "Transaction List";
}

<form method="post" asp-controller="Transactions" asp-action="Create">
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Account ID</th>
            <th scope="col">Transaction Type</th>
            <th scope="col">Amount</th>
            <th scope="col">Currency</th>
            <th scope="col">Transaction At</th>
            <th scope="col">Payment Method</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AccountTransaction transaction in Model)
        {
            <tr>
                <td scope="row">@transaction.Id</td>
                <td>@transaction.AccountId</td>
                <td>@transaction.TransactionType</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Currency</td>
                <td>@transaction.TransactionAt</td>
                <td>@transaction.PaymentMethod</td>
                @* přidat modal *@
                <td>
                    <form method="post" asp-controller="Transactions" asp-action="Update" asp-route-id="@transaction.Id">
                        <button type="submit" class="btn btn-warning">Update</button>
                    </form>
                </td>

                <td>
                    <form method="post" asp-controller="Transactions" asp-action="Delete" asp-route-id="@transaction.Id">


                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@transaction.Id">
                            Delete
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal-@transaction.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Delete</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Do you really wish to delete transaction: @transaction.Id ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>